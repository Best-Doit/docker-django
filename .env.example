# Django Configuration
# Generar una nueva SECRET_KEY para producción usando:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Configurar como False en producción
DJANGO_DEBUG=False

# Configurar con tu dominio real en producción (Railway automáticamente asigna dominios)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,*.railway.app,*.up.railway.app

# Railway Configuration
PORT=8000
RAILWAY_ENVIRONMENT=production

